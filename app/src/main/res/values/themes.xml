<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewCloudTesting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSelect</item>
        <!-- Customize your theme here. -->
        <item name="colorDefault">@color/black</item>
        <item name="colorSelect">@color/blue</item>
        <item name="colorRipple">@color/blue_light</item>
        <item name="colorBar">@color/gray</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
    </style>

    <style name="MyButton">
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:background">@drawable/selector_background_button_transparent</item>
    </style>

    <style name="MyBar">
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:background">@drawable/selector_background_button_transparent</item>
    </style>
</resources>